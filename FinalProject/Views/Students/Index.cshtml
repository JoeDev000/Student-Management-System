@using FinalProject.Models.Entities;
@using System.ComponentModel.DataAnnotations;
@using FinalProject.Helpers

@model List<Student>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Management System</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <!-- Header Section -->
    <header class="bg-primary text-white shadow-sm">
        <div class="container py-4">
            <div class="text-center">
                <h1 class="h2 mb-2">
                    <i class="fas fa-graduation-cap me-3"></i>
                    Student Management System
                </h1>
                <p class="mb-0 fs-6 opacity-75">View and manage student information</p>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <!-- Page Header with Add Button -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="text-primary">
                        <i class="fas fa-users me-2"></i>
                        Students Directory
                        @if (Model != null && Model.Count() > 0)
                        {
                            <span class="badge bg-primary ms-2">@Model.Count() Students</span>
                        }
                    </h3>
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Add New Student
                    </a>
                </div>

                @if (Model != null && Model.Count() > 0)
                {
                    <!-- Students Table Card -->
                    <div class="card shadow-sm border-0">
                        <div class="card-header bg-white py-3 border-bottom">
                            <h4 class="card-title mb-0 text-primary">
                                <i class="fas fa-list me-2"></i>
                                All Students
                            </h4>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover table-striped mb-0">
                                    <thead class="table-dark">
                                        <tr>
                                            <th scope="col" class="px-4 py-3">
                                                <i class="fas fa-hashtag me-2"></i>ID
                                            </th>
                                            <th scope="col" class="px-4 py-3">
                                                <i class="fas fa-user me-2"></i>Name
                                            </th>
                                            <th scope="col" class="px-4 py-3">
                                                <i class="fas fa-envelope me-2"></i>Email
                                            </th>
                                            <th scope="col" class="px-4 py-3">
                                                <i class="fas fa-phone me-2"></i>Phone
                                            </th>
                                            <th scope="col" class="px-4 py-3">
                                                <i class="fas fa-university me-2"></i>Department
                                            </th>
                                            <th scope="col" class="px-4 py-3 text-center">
                                                <i class="fas fa-cog me-2"></i>Actions
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var st in Model)
                                        {
                                            <tr>
                                                <td class="px-4 py-3 fw-semibold text-primary">
                                                    @st.Id
                                                </td>
                                                <td class="px-4 py-3">
                                                    <div class="d-flex align-items-center">
                                                        <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                                            <span class="text-white fw-bold">@st.Name?.Substring(0, 1).ToUpper()</span>
                                                        </div>
                                                        <span class="fw-medium text-dark">@st.Name</span>
                                                    </div>
                                                </td>
                                                <td class="px-4 py-3">
                                                    <span class="text-muted">@st.Email</span>
                                                </td>
                                                <td class="px-4 py-3">
                                                    <span class="text-muted">@st.Phone</span>
                                                </td>
                                                <td class="px-4 py-3">
                                                    <span class="text-muted">@st.Department.GetDisplayName()</span>
                                                </td>
                                                <td class="px-4 py-3 text-center">
                                                    <a asp-action="Details" asp-route-id="@st.Id" class="btn btn-info btn-sm me-1">
                                                        <i class="fas fa-eye me-1"></i>Details
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <!-- Empty State -->
                    <div class="text-center py-5">
                        <div class="card shadow-sm border-0">
                            <div class="card-body py-5">
                                <div class="mb-4">
                                    <i class="fas fa-user-graduate text-muted" style="font-size: 4rem;"></i>
                                </div>
                                <h3 class="h4 text-muted mb-3">No Students Found</h3>
                                <p class="text-muted mb-0">
                                    No students have been registered in the system yet.
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>