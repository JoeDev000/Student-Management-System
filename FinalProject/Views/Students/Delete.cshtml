@using FinalProject.Models.Entities
@using System.ComponentModel.DataAnnotations
@using FinalProject.Helpers

@model FinalProject.Models.Entities.Student

@{
    ViewData["Title"] = "Delete Student";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Delete Confirmation
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-warning me-2"></i>
                        <strong>Warning!</strong> You are about to permanently delete this student record. This action cannot be undone.
                    </div>

                    <div class="text-center mb-4">
                        <div class="bg-danger rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                            <span class="text-white fw-bold" style="font-size: 1.5rem;">@Model.Name?.Substring(0, 1).ToUpper()</span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <h5 class="text-center text-danger mb-3">Are you sure you want to delete this student?</h5>
                    </div>

                    <div class="row mb-4">
                        <div class="col-6">
                            <div class="border rounded p-2 bg-light">
                                <small class="text-muted">Student ID:</small>
                                <p class="mb-0 fw-bold">@Model.Id</p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="border rounded p-2 bg-light">
                                <small class="text-muted">Name:</small>
                                <p class="mb-0 fw-bold">@Model.Name</p>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-6">
                            <div class="border rounded p-2 bg-light">
                                <small class="text-muted">Email:</small>
                                <p class="mb-0">@Model.Email</p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="border rounded p-2 bg-light">
                                <small class="text-muted">Phone:</small>
                                <p class="mb-0">@Model.Phone</p>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="border rounded p-2 bg-light">
                                <small class="text-muted">Department:</small>
                                <p class="mb-0 fw-bold">@Model.Department.GetDisplayName()</p>
                            </div>
                        </div>
                    </div>

                    <form asp-controller="Students" asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />

                        <div class="d-flex gap-2 justify-content-center">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Yes, Delete Student
                            </button>
                            <a asp-controller="Students" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                                <i class="fas fa-eye me-2"></i>Back to Details
                            </a>
                            <a asp-controller="Students" asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>